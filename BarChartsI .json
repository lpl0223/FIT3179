{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Military Casualties in World War II",
  "data": {
    "url": "https://raw.githubusercontent.com/lpl0223/FIT3179/main/WW2.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.militaryDeaths >0"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "country",
      "type": "nominal",
      "axis": {"labelAngle": "30"},
      "sort": "-y",
      "title": "Country"
    },
    "y": {
      "field": "militaryDeaths",
      "type": "quantitative",
      "title": "Military casualties"
    },
    "color": {"field": "Continent"},
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "Country"},
      {
        "field": "militaryDeaths",
        "type": "quantitative",
        "format": ",",
        "title": "Military casualties"
      },
      {"field": "Population"}
    ]
  },
  "config": {}
}